<% stars = product.stars %>
<% reviews_count = product.reviews_count %>
<div class="ratings">
  <h5><%= t('average_customer_rating') %>: 
    &nbsp;
    <span class="ratings-stars">
      <span title="<%= txt_stars(stars) %>">
        <%= render :partial => "spree/reviews/stars", :locals => {:stars => stars} %>
      </span>
    </span>
  </h5>
  <div class="ratings-basedupon">(<%= t('based_upon') %> <%= t(:review, :count => reviews_count) %>)</div>
  <div itemprop="aggregateRating" itemscope itemtype="http://schema.org/AggregateRating">
    <meta itemprop="ratingValue" content="<%= stars %>" />
    <meta itemprop="reviewCount" content="<%= reviews_count %>" />
  </div>
</div>
